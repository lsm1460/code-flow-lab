{
  "name": "code-flow-lab",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.59",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "classnames": "^2.3.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "electron-is-dev": "^2.0.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is-visible": "^1.2.0",
    "react-redux": "^7.2.5",
    "react-scripts": "5.0.1",
    "react-sortablejs": "^6.1.4",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3",
    "sass": "^1.53.0",
    "sharp": "^0.32.6",
    "sortablejs": "^1.15.0",
    "typesafe-actions": "^5.1.0",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "craco start",
    "react-build:viewer": "craco build --config ./craco.viewer.config.js",
    "react-build": "npx yarn react-build:viewer && craco build",
    "start": "concurrently \"cross-env NODE_ENV=development BROWSER=none npx yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build:mac": "npx yarn react-build && electron-builder --mac",
    "build:win": "npx yarn react-build && electron-builder --win",
    "release": "npx yarn react-build && electron-builder --publish=always"
  },
  "build": {
    "productName": "Code Flow Lab",
    "appId": "net.jetalab.ex.startelectron",
    "asar": true,
    "mac": {
      "target": [
        "default"
      ]
    },
    "dmg": {
      "title": "Code Flow Lab"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "perMachine": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    },
    "extraResources": [
      "./temp-viewer/**"
    ],
    "fileAssociations": [
      {
        "ext": "cdfl",
        "name": "Code Flow Lab File",
        "role": "Editor"
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.16.4",
    "@types/lodash": "^4.14.189",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.2",
    "electron-builder": "^24.6.4",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "wait-on": "^7.0.1"
  }
}
